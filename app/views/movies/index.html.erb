<%= button_to 'Find Top Rated Movies', '/discover', method: :get %>

<%= form_with url: '/discover', method: :get, local: true do |form| %>
  <%= form.text_field :search %>

  <%= form.submit 'Find Movies' %>
<% end %>

<% if @movies %>
  <table>
    <tr>
      <th>Movie Title</th>
      <th>Vote Average</th>
    </tr>

    <% @movies.each do |movie| %>
      <tr id='movie-<%= movie[:id] %>'>
        <td><%= link_to movie[:title], '#' %></td>
        <td><%= movie[:vote_average] %></td>
      </tr>
    <% end %>
  </table>
<% end %>
